{% set messages = messages | selectattr("receiver", "contains", project_name) | list -%}

{% for message in messages %}
    {%- for signal in message.signals %}
        {%- if signal.type == "bitfield" %}
#define get_{{message.name}}_{{signal.name}}_raw() \
    g_rx_struct.{{message.name}}_{{signal.name}}
            {%- for flag in signal.flags %}
#define get_{{message.name}}_{{signal.name}}_{{flag}}() \
    (g_rx_struct.{{message.name}}_{{signal.name}} >> {{loop.index0}}) & 1U
            {%- endfor %}
        {%- else %}
#define get_{{message.name}}_{{signal.name}}() \
    g_rx_struct.{{message.name}}_{{signal.name}}
        {%- endif %}
    {% endfor %}
#define get_received_{{message.name}}() \
    g_rx_struct.received_{{message.name}}
{% endfor %}
